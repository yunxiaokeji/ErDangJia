@{
    ViewBag.Title = "销售账单";
}
@section css{
    <link href="/modules/plug/daterangepicker/daterangepicker.css" rel="stylesheet" />
}
@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/finance/orderbills"], function (ObjectJS) {
            ObjectJS.init();
        });
    </script>
}
<div class="header-box">
    <span class="header-title left">销售账单</span>
</div>
<div class="search-header">
    <div class="left" title="创建日期">
        <input type="text" id="iptCreateTime" placeholder="创建日期" class="ipt-date"  />
    </div>
    <div class="right searth-module" data-text="关键字搜索..." data-width="160"> </div> 
</div>
<div class="search-body">
    <div class="search-item">
        <div class="name">付款状态</div>
        <ul class="search-status">
            <li data-id="-1" class="hover">全部</li>
            <li data-id="0" class="">未付款</li>
            <li data-id="1" class="">部分付款</li>
            <li data-id="2" class="">已付款</li>
        </ul>
    </div>
    <div class="search-item">
        <div class="name">退款状态</div>
        <ul class="search-status">
            <li data-id="-1">全部</li>
            <li data-id="0" class="hover">正常</li>
            <li data-id="1">部分退款</li>
            <li data-id="2">已退货</li>
        </ul>
    </div>
    <div class="search-item">
        <div class="name">开票状态</div>
        <ul id="invoiceStatus">
            <li data-id="-1" class="hover">全部</li>
            <li data-id="0" class="">未开票</li>
            <li data-id="1" class="">部分开票</li>
            <li data-id="2" class="">已开票</li>
        </ul>
    </div>
</div>

<div class="content-body">
    <table class="table-list">
        <tr class="tr-header">
            <td class="tLeft width150">账单编号</td>
            <td class="width100 tRight">总金额</td>
            <td class="width80">付款状态</td>
            <td class="width100 tRight">付款金额</td>
            <td class="width100">开票状态</td>
            <td class="width100 tRight">开票金额</td>
            <td class="width150">订单编号</td>
            <td class="width100">创建人</td>
            <td class="width150">创建时间</td>
        </tr>
    </table>
    @*<ul class="left batch-operate mTop20">
        <li class="width100 mTop5">
            <span class="ico-check pLeft5" id="checkAll">批量操作</span>
        </li>
    </ul>*@
    <div id="pager" class="mTop20"></div>
</div>

