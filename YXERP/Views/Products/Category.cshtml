@{
    ViewBag.Title = "产品类别设置";
}
<link href="/modules/css/products.css" rel="stylesheet" />

@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/products/category"], function (category) {
            category.init();
        });
    </script>
}
<div class="content-body">
    <div class="category-header">
        全部分类
        <a href="javascript:void(0)" class="category-add">添加子类</a>
    </div>
    <div id="categoryBox" class="category-box">

    </div>
</div>
<ul class="dropdown-ul hide" id="ddlCategory" style="width:65px;">
    <li class="@(ExpandClass.IsLimits(HttpContext.Current,"103010401"))" id="editCategory">编辑</li>
    <li class="@(ExpandClass.IsLimits(HttpContext.Current,"103010402"))" id="deleteCategory">删除</li>
</ul>

<ul class="dropdown-ul hide" id="ddlAttr" style="width:65px;">
    <li class="@(ExpandClass.IsLimits(HttpContext.Current,"103010301"))" id="editAttr">编辑</li>
    <li class="@(ExpandClass.IsLimits(HttpContext.Current,"103010302"))" id="deleteAttr">删除</li>
</ul>
