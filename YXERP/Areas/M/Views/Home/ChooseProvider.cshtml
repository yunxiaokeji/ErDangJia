@{
    ViewBag.Title = "选择店铺";
    List<CloudSalesEntity.ProvidersEntity> list = (List<CloudSalesEntity.ProvidersEntity>)ViewBag.Providers;
    CloudSalesEntity.Users CurrentUser = (CloudSalesEntity.Users)Session["ClientManager"];
}
@section css{
    <link href="/modules/m/css/style/chooseprovider.css" rel="stylesheet" />
}
<header>
    <div class="center font16">
       选择店铺
    </div>
</header>
<div class="provider-list">
    <ul class="provider-items">
        <li data-id="@CurrentUser.ClientID">
            进入我的店铺
        </li>   
        @for (int i = 0; i < list.Count; i++)
        {
            var item=list[i];
            if (item.CMClientID != "" && item.CMClientID != null) 
            {
                <li data-id="@item.CMClientID">
                    @item.Name
                </li>   
            }
        }
    </ul>
</div>
<script type="text/javascript">
    $(function () {
        $(".provider-items li").click(function () {
            var _self= $(this);
            var id = _self.data("id");

            $.post("/m/home/SelectStore", { id: id }, function (data) {
                if (data.status) {
                    location.href = "/m/home/index";
                }
            });
        });
    });
</script>
