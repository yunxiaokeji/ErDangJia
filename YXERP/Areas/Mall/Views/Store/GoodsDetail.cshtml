        .icoMobileCode { background:url(/modules/images/ico-mobilecode.png) no-repeat 7px 11px;border-radius:3px;}
        .icoUserCompany { background:url(/modules/images/ico-company.png) no-repeat 7px 11px;border-radius:3px;}
        .icoName { background:url(/modules/images/ico-username.png) no-repeat 7px 11px;border-radius:3px;}
        .icoSurePwd { background:url(/modules/images/ico-surepwd.png) no-repeat 7px 11px;border-radius:3px;}
        .remember-box { height:30px; margin-top:20px; }
        .remember-box .cb-remember-password { cursor:pointer; padding-left:2px; color:#666; }
        .btnLogin { height:40px;line-height:40px; background-color:#4A98E7 ; color:#fff; font-size:16px; text-align:center;
            border:none; font-weight:bold; cursor:pointer; display:inline-block; border-radius:3px; width:320px;}
