@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta charset="UTF-8"/>
    <meta content="企业管理，二当家，直销平台，让营销行云流水" name="keywords"/>
    <meta content="中国市场最通用的企业运营管理服务平台，客户管理，产品管理，营销管理集成在平台之上，功能强大，2016年开始运营" name="description"/>
    <meta content="width=device-width,initial-scale=1,maximum-scale=1" name="viewport"/>
    <meta content="telephone=no" name="format-detection"/>
    <title>注册二当家</title>

    <link href="/modules/css/base.css" rel="stylesheet" />
    <link href="~/modules/css/layout.css" rel="stylesheet" />
    <link href="/modules/css/home/login.css" rel="stylesheet" />
    
    <link rel="shortcut icon" href="/modules/images/logo_login.png"/>

    <script type="text/javascript" src="/Scripts/sea.js"></script>
    <script type="text/javascript" src="/Scripts/sea-config.js"></script>
    <script type="text/javascript">
        seajs.use("/modules/scripts/home/register.js", function (obj) {
            obj.init('@ViewBag.CustomerID', '@ViewBag.ClientID');
        });
    </script>
</head>
<body>
    <div class="login-body" >
     <div class="login-header">
            <div class="left header-logo" onclick="location.href='http://www.yunxiaokeji.com'">
                <div class="left"><img src="/modules/images/logo_login.png"  style="width:26px;"/></div>
                <div class="left headerTitle">云销科技</div>
                <div class="clear"></div>
            </div>
            <a class="btnRegister right" href="/Home/Login">登录</a>
       </div>

        <div class="main" style="margin-top:80px;">
            <div class="loginTitle">注册<span>－智能工厂</span></div>

            <div class="login">
                <div class="registerErr hide"></div>
                <div class="loginbar">
                    <input class="input icoName" type="text" id="name" placeholder="姓名" value="" maxlength="25"/>
                </div>
                <div class="loginbar">
                    <input class="input icoUserName" id="loginName" type="text" placeholder="手机号" value="" maxlength="11"/>
                </div>

                <div class="loginbar">
                    <input class="input icoMobileCode" id="code" style="width:60%;" type="text"  placeholder="验证码" />
                    <input type="button" class="btnLogin right" id="btnSendMsg" value="获取验证码" style="width:30%;font-size:14px;"/>
                </div>

                <div class="btnLogin" id="btnRegister">注册</div>
            </div>
        </div>
    </div>
</body>
</html>
