@{
    ViewBag.Title = "客户配置";
}
@section css{
    <link href="/modules/css/system.css" rel="stylesheet"/> 
    <link href="/modules/plug/choosecolor/spectrum.css" rel="stylesheet" />
}
@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/system/sources"], function (obj) {
            obj.init();
        });
    </script>
}
<div class="tab-nav">
    <ul class="search-tab left">
        <li  class="hover" data-id="sourceList">来源配置</li>
        <li data-id="colorList">标签配置</li>
        <li data-id="industryList">行业配置</li>
        <li data-id="memberList" class="">等级配置</li>  
    </ul>
    <div class="btn-add right" data-id="sourceList" id="createModel">新建来源</div>
    <div class="btn-add right" style="display: none;" data-id="colorList" id="createColor">新建标签</div>
    <div class="btn-add right" style="display: none;" data-id="industryList" id="createIndustry">新建行业</div>
    @*<div class="btn-add right" style="display:none;" data-id="memberList"  id="createMeber">新建等级</div>*@
</div>
<div class="content-body mTop5">
    <table class="table-list nav-part" id="sourceList">
        <tr class="tr-header">
            <td class="tLeft">名称</td>
            <td class="tLeft">编码</td>
            @*<td class="width150">是否允许选择</td>*@
            <td class="width150">创建时间</td>
            <td class="width150">创建人</td>
            <td class="width80">操作</td>
        </tr>
    </table>

    <ul class="color-list hide nav-part" id="colorList">
    </ul>

    <div class="hide nav-part" id="industryList">
        <table class="table-list">
        </table>
    </div>
    <div class="hide nav-part" id="memberList">
        <div class="mTop15" style="width: 100%; border-bottom: solid 1px #ccc;">
            <h1 class="font14 bolder500 lineHeight15">积分兑换规则<span class="colorccc font10">　|　订单完成时，会员积分将依据本规则自动累加</span></h1>
            <div class="mLeft10 mTop15 mBottom10">
                <input class="width50 mRight5" type="text" value="1" readonly="readonly" id="salePrice" title="消费金额"/>
                <span>元=</span>
                <input class="width50 mRight5" type="text" value="10" id="integerFee" title="兑换积分"/>
                <span>积分</span>
                <div class="btn mLeft10" data-id="sourceList" id="saveClientRule">保 存</div>
            </div>
        </div>
        <div  class="mTop15" >
            <h1 class="font14 bolder500 lineHeight15">会员级别和折扣设置<span class="colorccc font10">　|　 以历史积分为标准，设定不同的等级和折扣，刺激消费</span></h1>
            <ul class="memberlevelul mTop15" >

            </ul>
            <a data-id="memberList" id="createMemberLevel">+ 新增会员级别和折扣</a>
            <div class="mTop15 pTop10" style="border-Top: solid 1px #ccc;">
                <div class="btn mLeft10" data-id="sourceList" id="saveMemberLevel">保 存</div>
                <div class="btnccc mLeft10" data-id="sourceList" id="setToCustomers">应用到所有会员</div>
            </div>
        </div>
    </div>
</div>

<ul class="dropdown-ul hide" id="ddlSource" style="width: 65px;">
    <li id="updateObject">编辑</li>
    <li id="deleteObject">删除</li>
</ul>
<ul class="colordrop dropdown-ul hide" id="ddlColor" style="width:65px;">
    <li id="updateColor">编辑</li>
    <li id="deleteColor">删除</li>
</ul>