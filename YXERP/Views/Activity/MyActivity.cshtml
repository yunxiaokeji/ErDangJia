@{
    
}

@section css{
    <link href="/modules/plug/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <link href="/modules/css/customer.css" rel="stylesheet" />
}

@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/customer/activity"], function (ObjectJS)
        {
            ObjectJS.init('@ViewBag.Option');
        });
    </script>
}

<div class="header-box">
    <div data-url="/Activity/Create" data-id="101029001" data-name="新建活动" class="btn-add btn-open-window right @(ExpandClass.IsLimits(HttpContext.Current,"101029001"))">新建活动</div>
    
</div>

<div class="search-header">
    <div id="chooseBranch" class="left mRight20"></div>
    <div class="left" title="活动时间">
        <input type="text" id="iptCreateTime" placeholder="活动时间" class="ipt-date"  />
    </div>
    <div class="right searth-module" data-text="输入活动名称..." data-width="150"></div>
</div>

<div class="search-body">
    <div class="search-item">
        <div class="name">状态</div>
        <ul class="search-stages">
            <li data-id="-1" class="hover">全部</li>
            <li data-id="2" >进行中</li>
            <li data-id="3">未开始</li>
            <li data-id="1">已结束</li>
        </ul>
    </div>
    <div class="search-item">
        <div class="name">类型</div>
        <ul class="search-type">
            <li data-id="-1" class="hover">全部</li>
            <li data-id="1">负责的</li>
            <li data-id="2">参与的</li>
        </ul>
    </div>
</div>
<ul class="search-sort">
    <li>排序</li>
    <li class="sort-item hover" data-column="CreateTime">
        创建日期
        <span class="asc"></span>
        <span class="desc hover"></span>
    </li>
    <li class="sort-item" data-column="BeginTime">
        开始日期
        <span class="asc"></span>
        <span class="desc"></span>
    </li>
    <li class="sort-item" data-column="EndTime">
        结束日期
        <span class="asc"></span>
        <span class="desc"></span>
    </li>
    <li class="right">
        <div class="right mTop5">
            <div class="display-tab hand left" data-type="1">
                <img src="/modules/images/ico-list-blue.png" />
            </div>
            <div class="display-tab hand left mLeft15" data-type="2">
                <img src="/modules/images/ico-card-gray.png" />
            </div>
        </div>
    </li>
</ul>
<div class="content-body">
    <table class="activityList" style="width:100%;border:0; border-spacing:0px;">

    </table>

    <ul class="activityCardList"></ul>

    <div id="pager" class="mTop20"></div>
    <div class="clear"></div>
</div>

<ul class="dropdown-ul hide" style="width:65px;">
    <li class="@(ExpandClass.IsLimits(HttpContext.Current,"101029002"))" id="setObjectRole">编辑</li>
    <li class="@(ExpandClass.IsLimits(HttpContext.Current,"101029003"))" id="deleteObject">删除</li>
</ul>

