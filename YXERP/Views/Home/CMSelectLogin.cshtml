@{
    Layout = null;
}
<title>授权登录二当家 - @ViewBag.CompanyName </title>
<link href="/modules/css/base.css" rel="stylesheet" />
<link href="/modules/css/default/layout.css" rel="stylesheet" />
<link href="/modules/css/home/selectlogin.css" rel="stylesheet" />

<div class="header">
    <img class="left mTop2" style="width:25px; height:25px;" src="@(string.IsNullOrEmpty(ViewBag.Logo)?"/modules/images/logo_login.png":ViewBag.Logo)" />
    <span class="left mLeft10">@ViewBag.CompanyName</span>
    <div class="clear"></div>
</div>
<div class="select-login center">
    <div class="header-txt">
        您的工厂<span class="bolder">@ViewBag.CompanyName</span>尚未绑定<span class="bolder">二当家</span>账号
    </div>
    <div class="header-title">
        请选择绑定已有帐户，或创建新账户
    </div>
    <div class="btn-bind btn-btn" onclick="location.href='/Home/Login?BindAccountType=4'" >绑定已有二当家账户</div>
    <div class="btn-register btn-btn" onclick="location.href='/Home/CMRegister'">注册新账户</div>
</div>

