@{
    ViewBag.Title = "产品列表";
}

<link rel="stylesheet" href="/modules/css/shoppingcart.css" />

@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/products/product"], function (obj) {
            obj.initList();
        });
    </script>
}

<div class="header-box">
    <span class="header-title left">产品列表</span>
    <div class="right @(ExpandClass.IsLimits(HttpContext.Current, "103010500"))"  >
        <span data-url="/Products/Category?type=add" data-id="103010500" data-name="添加产品"  class="pLeft2 btn-add btn-open-window left @(ExpandClass.IsLimits(HttpContext.Current, "103010500"))" style="color: #fff;-moz-border-radius-topright: 0px; -webkit-border-top-right-radius: 0px;-moz-border-radius-bottomright: 0px; -webkit-border-bottom-right-radius:0px;border-bottom-right-radius: 0px; border-top-right-radius: 0px;" >添加产品</span>
        <div id="dropdown" class="bghulan dropdown rightraduis3 right " style="height:28px;width:20px;">
            <span class="mTop8 mRight5 ico-dropdown-white right"></span>
        </div>
    </div>

</div>
 <div class="search-header">
    <ul class="category-map">
        <li data-id=""><a href="javascript:void(0);">全部分类</a></li>
    </ul>
    <div class="right searth-module" data-text="输入产品编码/名称/助记码" data-width="300"> </div>
</div>
<div class="search-body">
    <div class="search-item">
        <div class="name">分类</div>
        <ul class="search-stages" id="category-child">
            
        </ul>
    </div>
</div>
<ul class="search-sort">
    <li>排序</li>
    <li class="sort-item hover" data-column="p.CreateTime">
        上架日期
        <span class="asc"></span>
        <span class="desc hover"></span>
    </li>
    <li class="sort-item" data-column="p.SaleCount">
        销量
        <span class="asc"></span>
        <span class="desc"></span>
    </li>
    <li class="sort-item" data-column="p.Price">
        销售价格
        <span class="asc"></span>
        <span class="desc"></span>
    </li>
    <li class="mLeft20">
        销售价：
        <input type="text" class="width60" id="beginprice" />&nbsp;-&nbsp;
        <input type="text" class="width60" id="endprice" />
        <span class="btn" id="searchprice">搜索</span>
    </li>
</ul>
<div class="content-body mTop20">
    <table class="table-list">
        <tr class="tr-header" id="product-items">
            <td class="tLeft">产品编码</td>
            <td class="tLeft">产品名称</td>
            <td class="width100 tLeft">分类名称</td>
            <td class="tLeft">供应商</td>
            <td class="tLeft">品牌</td>
            <td class="width100 tRight">成本价</td>
            <td class="width100 tRight">销售价</td>
            @*<td class="width80">销量</td>
            <td class="width80">逻辑库存</td>
            <td class="width80">实际库存</td>*@
            <td class="width80">是否销售</td>
            <td class="width100">上架日期</td>
            <td class="width50">操作</td>
        </tr>
    </table>
    <div id="pager" class="mTop20"></div>
    <div class="clear"></div>
</div>
<ul class="dropdown-ul hide" style="width: 100px;">
    <li class="" id="exportExcel">导入产品</li>
    <li class="" id="exportProduct">导出产品</li> 
</ul>
