@{
    ViewBag.Title = "款式详情";
    var order = (CloudSalesEntity.Products)ViewBag.Model;
    var user = (CloudSalesEntity.Manage.Clients)ViewBag.baseUser;
    string[] imagesUrl = { order.ProductImage};
}
@section css{
    <link href="/modules/m/css/style/detail.css" rel="stylesheet" />
    @*<link href="/modules/m/plug/touchSlider/css/style.css" rel="stylesheet" />*@
}
@section scripts{
    <script src="/Scripts/jquery-1.11.1.js"></script>
@*    <script src="/modules/m/plug/touchSlider/js/jquery-1.js"></script>
    <script src="/modules/m/plug/touchSlider/js/jquery_002.js"></script>
    <script src="/modules/m/plug/touchSlider/js/jquery.js"></script> *@
    <script type="text/javascript">
        $(function () {
            seajs.use("/modules/m/scripts/style/detail", function (obj) {
                obj.init(
                    '@(imagesUrl.Length)',
                    '@order.ProductImage',
                    '@Html.ToJSONString(order)',
                    '@Html.ToJSONString(user)'
                 );
            });
        });
    </script>
}
<header>
        <a class="btn-return" href = "javascript:if(history.length>1){ history.go(-1);} else{location.href='/home/index'}"><i class="return-icon iconfont">&#xe60a;</i></a>
        <div class="mLeft50 font16"> 款式详情</div>
    </header>

<div class="main_visual mTop40">
@*    <div class="flicking_con">
        @{
            if (imagesUrl.Length > 1)
            {
                for (int i = 0; i < imagesUrl.Length; i++)
                {
                    <a class="@(i == 0 ? "on" : "")" href="javascript:void(0);"></a>
                }
            }
        }
    </div>*@
    <div class="main_image">
        <ul>
            <li><img style="width:100%;" ></li>
         @*   @{
                if (imagesUrl.Length > 0)
                {
                    for (int i = 0; i < imagesUrl.Length; i++)
                    {
                        <li><img style="width:100%;" src="@(imagesUrl[i])"></li>
                    }
                }
            }*@
        </ul>
        <div class="clear"></div>
    </div>
</div>
    
<!--任务信息-->
<div class="task-info">
    <div class="main-info">
        <ul class="mLeft10 mRight10">
            <li class="long" style="display:block;">
                <div class="task-code base-info">@(string.IsNullOrEmpty(order.ProductName) ? "--" : order.ProductName)</div>
            </li>
            <li>
                <div class="task-code base-info">
                    <span>类别：</span>
                    <span class="mLeft5">@(string.IsNullOrEmpty(order.CategoryName)?"--":order.CategoryName)</span>
                </div>
            </li>
            <li>
                <div class="task-code base-info">
                    <span>单位：</span>
                    <span class="mLeft5">@((!string.IsNullOrEmpty(order.UnitName) ? order.UnitName : "件"))</span>
                </div>
            </li>
            <li>
                <div class="left blue">￥ <span style="font-size:26px;">@(order.Price.ToString("f2"))</span></div>
                <div class="btn-addOrder right">立即下单</div>
                <div class="clear"></div>
            </li>
        </ul>
    </div>
    <div class="clear"></div>
</div>

<!--菜单-->
<nav>
    <ul>
        <li class="menuchecked" data-classname="description"><i class="iconfont">&#xe625;;</i>款式详情</li>
    </ul>
    <div class="clear"></div>
</nav>

<div class="main-box">
    <div class="description">
        <ul class="table-add">
                <li>
                    <span class="column-title">款式编码：</span>
                    <span>@order.ProductCode</span></li>
                <li>
                    <span class="column-title">产品毛重：</span>
                    <span>@(order.Weight.Value.ToString("f2"))g</span>
                </li>
                <li>
                    <span class="column-title">累计销售：</span>
                    <span>@(order.SaleCount)</span>
                </li>
                <li>
                    <span class="column-title">颜色：</span>
                    @foreach (var attr in order.AttrLists)
                    {
                        <span class="mRight5">@attr.AttrValues[0].ValueName</span>
                    }
                </li>
            </ul>
        <div class="pAll15">
            @{
                if (!string.IsNullOrEmpty(order.Description))
                {
                    <div class="">@(new MvcHtmlString(Server.UrlDecode(order.Description)))</div>
                }
            }
        </div>
    </div>
</div>

<div class="overlay-addOrder"></div>


    
