@{
    ViewBag.Title = "库存报损";
}
@section css{
    <link href="/modules/css/stock.css" rel="stylesheet" />
    <link href="/modules/plug/daterangepicker/daterangepicker.css" rel="stylesheet" />
}

@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/stock/damaged"], function (obj) {
            obj.init('@Html.ToJSONString((List<CloudSalesEntity.WareHouse>)ViewBag.Wares)');
        });
    </script>
}
<div class="header-box">
    <span class="header-title left">报损管理</span>
    <div  class="right">
        <span id="btnSubmit" data-id="103030301" data-name="新建报损" data-url="/Stock/CreateDamaged" class="btn-add btn-open-window pLeft2 left" style="color: #fff;-moz-border-radius-topright: 0px; -webkit-border-top-right-radius: 0px;-moz-border-radius-bottomright: 0px; -webkit-border-bottom-right-radius:0px;border-bottom-right-radius: 0px; border-top-right-radius: 0px;" >新建报损（0）</span>
        <div id="dropdown" class="bghulan rightraduis3 right " style="height:28px;width:20px;">
            <span class="mTop8 mRight5 ico-dropdown-white right"></span>
        </div>
    </div>
</div>
<div class="search-header">
    <div class="left" title="报损日期">
        <input type="text" id="iptCreateTime" placeholder="报损日期" class="ipt-date"  />
    </div>
    <div class="right searth-module" data-text="关键字搜索..." data-width="160"> </div> 
</div>
<div class="search-body">
     <div class="search-item">
        <div class="name">状态</div>
        <ul class="search-status">
            <li data-id="-1" class="hover">全部</li>
            <li data-id="0" class="">待审核</li>
            <li data-id="2" class="">已审核</li>
        </ul>
    </div>
     <div class="search-item">
        <div class="name">仓库</div>
        <ul class="search-wares">
            <li data-id="" class="hover">全部</li>
            @foreach (var item in (List<CloudSalesEntity.WareHouse>)ViewBag.Wares)
            { 
                <li data-id="@(item.WareID)">@(item.Name)</li>
            }
        </ul>
    </div>
</div>
<div class="content-body mTop20">
    <table class="table-items-detail">
        <tr class="table-header">
            <td class="tLeft">产品名称</td>
            <td class="tLeft">规格</td>
            <td>数量</td>
            <td>仓位</td>
            <td class="width100">报损日期</td>
            <td class="width100">操作</td>
        </tr>
    </table>
    <div class="mTop20">
        <ul class="left"> 
            <li class="hand left width80 mLeft5" id="checkAll">
                <span class="checkbox iconfont mTop5 mRight5"></span>全选
            </li>
            <li class="left">
                <a href="javascript:void(0);" class="btn" id="printOrderOut" >
                        <i class="left iconfont mRight5" style="margin-left: -5px;color:aliceblue">&#xe658;</i>打 印
                </a>
            </li>
        </ul>
        <div id="pager"></div>
        <div class="clear"></div>
    </div> 
<ul class="dropdown-ul hide" id="auditDropdown" style="width:65px;">
    <li class="btn-open-window @(ExpandClass.IsLimits(HttpContext.Current,"103030302"))" data-name="审核报损单" id="audit">审核</li>
    <li class="@(ExpandClass.IsLimits(HttpContext.Current,"103030304"))" id="delete">删除</li>
</ul>
<ul id="exceldropdown" class="dropdown-ul hide" style="width: 100px;">
    @*<li class="" id="exportPurchases">导入报损单</li>*@
    <li class="" id="exportPurchases">导出报损单</li> 
</ul>