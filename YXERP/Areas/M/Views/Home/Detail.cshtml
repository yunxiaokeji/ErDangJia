@{
    ViewBag.Title = "款式详情";
    var order = (IntFactory.Sdk.OrderEntity)ViewBag.Order;
    var currentClient = (CloudSalesEntity.Manage.Clients)ViewBag.CurrentClient;
    var providerClient = (CloudSalesEntity.Manage.Clients)ViewBag.ProviderClient;
    var imgs = string.IsNullOrEmpty(order.orderImages) ? new string[] { } : order.orderImages.Split(',');
}
@section css{
    <link href="/modules/m/css/style/detail.css" rel="stylesheet" />
    <link href="/modules/m/plug/swiper/css/swiper.min.css" rel="stylesheet" />
    <link href="/modules/m/plug/swiper/css/swiper.css" rel="stylesheet" />
}
@section scripts{
    @{
        if (imgs.Length > 1)
        {
        <script src="/modules/m/plug/swiper/swiper.min.js"></script>
        }
    }
    <script type="text/javascript">
        $(function () {
            seajs.use("/modules/m/scripts/style/detail", function (obj) {
                obj.init(
                    '@Html.ToJSONString(order)',
                    '@Html.ToJSONString(currentClient)',
                    '@imgs.Length'
                 );
            });
        });
    </script>
}
<header>
        <a class="btn-return" href = "javascript:if(history.length>1){ history.go(-1);} else{location.href='/m/home/index'}"><i class="return-icon iconfont">&#xe60a;</i></a>
        <div class="mLeft50 font16"> 款式详情</div>
    </header>

