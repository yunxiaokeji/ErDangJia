@{
    
}
@section css{
    <link href="/modules/plug/daterangepicker/daterangepicker.css" rel="stylesheet" />
}
@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/purchase/purchases"], function (obj) {
            obj.init('@ViewBag.Type', '@Html.ToJSONString((List<CloudSalesEntity.ProvidersEntity>)ViewBag.Providers)', '@ViewBag.SouceType');
        });
    </script>
}
<div class="header-box">
    <span class="header-title left">采购管理</span>
    <div id="btnSubmit" data-id="103029001" data-name="新建采购" data-url="/Purchase/ConfirmPurchase" class="btn mLeft10 btn-open-window right">提交采购单(0)</div>
    <div class=" right">
        <span id="btnCreate" class="pLeft2 btn-add left btn-add btn-open-window"  data-id="103029001" data-name="新建采购" data-url="/Purchase/ChooseProducts" style="color: #fff;-moz-border-radius-topright: 0px; -webkit-border-top-right-radius: 0px;-moz-border-radius-bottomright: 0px; -webkit-border-bottom-right-radius:0px;border-bottom-right-radius: 0px; border-top-right-radius: 0px;" >选择采购产品</span>
        <div id="dropdown" class="bghulan rightraduis3 right " style="height:28px;width:20px;">
            <span class="mTop8 mRight5 ico-dropdown-white right"></span>
        </div>
    </div>
</div>
<div class="search-header">
    <div id="ddlProviders" class="left mRight10">

    </div>
    <div id="ddlSourceType" class="left ">

    </div>
    <div class="left mLeft10" title="采购日期">
        <input type="text" id="iptCreateTime" placeholder="采购日期" class="ipt-date"/>
    </div>
    <div class="right searth-module" data-text="关键字搜索..." data-width="160"> </div> 
</div>
<div class="search-body">
    <div class="search-item">
        <div class="name">状态</div>
        <ul class="search-status">
            <li data-id="-1" class="hover">全部</li>
            <li data-id="0" class="">待审核</li>
            <li data-id="1" class="">部分入库</li>
            <li data-id="2" class="">已入库</li>
        </ul>
    </div>
   <div class="search-item">
        <div class="name">仓库</div>
        <ul class="search-wares">
            <li data-id="" class="hover">全部</li>
            @foreach (var item in (List<CloudSalesEntity.WareHouse>)ViewBag.Wares)
            { 
                <li data-id="@(item.WareID)">@(item.Name)</li>
            }
        </ul>
    </div>
</div>
<div class="content-body mTop20">
    <table class="table-items-detail">
        <tr class="table-header">
            <td class="tLeft">产品名称</td>
            <td class="tLeft">规格</td>
            <td>采购价</td>
            <td>数量</td>
            <td>入库数量</td>
            <td>总金额</td>
            <td>已采购金额</td>
            <td class="width100">采购日期</td>
            <td class="width100">操作</td>
        </tr>
    </table> 
    <div class="mTop20">
        <ul>
            <li class="hand left width80 mLeft5" id="checkAll">
                <span class="checkbox iconfont mTop5 mRight5"></span>全选
            </li>
            <li class="left">
                <a href="javascript:void(0);" class="btn" id="printOrderOut" >
                     <i class="left iconfont mRight5" style="margin-left: -5px;color:aliceblue">&#xe658;</i>打 印
                </a>
            </li>
        </ul>
        <div id="pager"></div>
        <div class="clear"></div>
    </div>  
<ul class="dropdown-ul hide" id="auditDropdown" style="width:65px;">
    <li class="btn-open-window @(ExpandClass.IsLimits(HttpContext.Current, "103029002"))" data-name="审核采购单" id="audit">审核</li>
    <li class="@(ExpandClass.IsLimits(HttpContext.Current, "103029004"))" id="delete">删除</li>
</ul>

<ul id="exceldropdown" class="dropdown-ul hide" style="width: 128px;">
    @*<li class="" id="exportPurchases">导入采购单</li>*@
    <li class="" id="exportPurchases">导出采购单</li> 
</ul>