@{
    //Layout = null;
    ViewBag.Title = "新建订单"; 
    var categoryItems = (List<IntFactory.Sdk.CategoryEntity>)ViewBag.Items;
}
@*<head>
   <title>新建订单</title>
</head>*@
@*<link href="/modules/css/base.css" rel="stylesheet"/>*@
<link href="/modules/css/createorder.css" rel="stylesheet"/> 
<link href="/modules/css/iconfont/iconfont.css" rel="stylesheet" />
<link href="/modules/plug/laydate/need/laydate.css" rel="stylesheet" />
 @*margin: auto;*@
<div style="max-width: 1200px;">
<div class="tab-nav">
    <ul class="tab-nav-ul left">
        <li data-id="navDH" class="hover" title="供应商已有成品款式下单" data-type="1"> 
            <div>
                <span class="iconfont">&#xe62c;</span>
                <span>大货下单</span>
            </div> 
        </li>
        <li data-id="navDY"  data-type="2" title="供应商按客户提供的样品定制下单,需要寄送样款"> 
            <div>
                <span class="iconfont">&#xe60f;</span>
                <span>打样下单</span>
            </div>
            </li>
        </ul>
    </div>
    <div class="content-body">
        <div class="nav-partdiv" id="navDH">
            <ul class="table-add">
                <li id="titleName">
                    <span class="column-title">产品名称：</span>
                    <span class="hide" id="pdtOtherName">
                         <input  class="hide" type="text" maxlength="10" id="pdtName" readonly="readonly"  data-empty="必填" data-type="double" class="input verify" />
                     </span>
                    <span><a class="btn" id="choosePDTOther">选择产品</a></span>
                </li>
                <li id="goodsQuantity">

                </li>
            </ul> 
        </div>
        <div class="nav-partdiv hide" id="navDY">
            <ul class="table-add"> 
                <li>
                    <span class="column-title">加工品类：</span>
                    <span>
                    @foreach (var item in (List<IntFactory.Sdk.ProcessCategoryEntity>) ViewBag.Categorys)
                    {
                        <span class="category-item" data-id="@(item.CategoryID)">@item.Name</span>
                    }
                </span>
                </li>
                <li>
                    <span class="column-title">订单分类：</span>
                    <span class="bigcategory">  </span>
                    <span class="ordercategory">  </span> 
                </li>
                <li id="checkOrderType">
                    <div class="mTop10 radio-info ">
                        <span class="column-title">订单类型：</span>
                        <span class="ico-radiobox hover" data-type="1">
                        <span></span>
                    </span>
                        &nbsp;打样
                        <span class="ico-radiobox mLeft30" data-type="2">
                        <span></span>
                    </span>
                        &nbsp;大货
                    </div>
                </li>
                <li class="childGoodsQuantity">

                </li>
                <li>
                    <span class="column-title">价格：</span>
                    <span><input type="text" maxlength="10" id="planPrice"  data-empty="必填" data-type="double" class="input verify" /></span>
                </li>
                <li>
                    <span class="column-title">交货日期：</span>
                    <span><input type="text" id="iptCreateTime" readonly="true" placeholder="期望交货日期"  class="ipt-date hand" style="width: 150px"  /></span>
                </li>
                <li>
                    <span class="column-title">快递单号：</span> 
                    <span><input type="text" maxlength="50" id="expressCode" class="input" /></span>
                </li>
                <li>
                    <span class="column-title">详细需求：</span>
                    <textarea id="remark" placeholder="如有详细需求请注明具体内容，以免制作时产品遗漏"
                              onpropertychange="this.style.height=this.value.split('\n').length*20 + 'px';this.style.height=this.scrollHeight + 'px';"
                              oninput="this.style.height=this.value.split('\n').length*20 + 'px';this.style.height=this.scrollHeight + 'px';"></textarea>
                </li>
                <li>
                    <span class="column-title">附件：</span>
                    @*<span id="productIco"></span>*@
                    <span class="btn" id="productIco" style="position: relative; z-index: 1;">选择图片</span>
                </li>
                <li>
                    <ul id="orderImages" class="order-imgs hide">

                    </ul>
                </li>

                <li class="mTop10">
                    <div class="info-box mBttom10" data-type="2">
                        <div>
                            <span class="iconfont">&#xe624;</span>
                            <span>客户信息</span>
                        </div>
                    </div>
                </li>
                <li class="company">
                    <span class="column-title">姓名：</span> 
                    <span><input type="text" maxlength="50" id="name" data-empty="必填" class="input verify" /></span> 
                </li>
                <li>
                    <span class="column-title">联系电话：</span> 
                    <span><input type="text" maxlength="11" id="contactMobile" data-empty="必填" data-type="mobile" class="input verify" /></span>
                </li>
                <li>
                    <span class="column-title">邮寄地址：</span> 
                    <span id="city"></span>
                </li>
                <li>
                    <span class="column-title">详细地址：</span> 
                    <span><input type="text" maxlength="200" id="address" class="input" /></span>
                </li>

            </ul>
            
        </div>
        <div class="mTop10">
            <div class="btn right" id="btnSave">保存</div>
        </div>
    </div>
</div>
<script type="text/javascript" src="/Scripts/sea.js"></script>
<script type="text/javascript" src="/Scripts/sea-config.js"></script>
<script src="/modules/plug/laydate/laydate.js"></script>
    <script type="text/javascript">
    seajs.use(["scripts/default/ordercreat"], function (ObjectJS) {
        ObjectJS.init('', '@(ViewBag.ClientID)', '@Html.ToJSONString(categoryItems)');
    });
    var myDate = new Date();
    var minDate = myDate.toLocaleDateString();
    minDate = minDate + " 23:59:59";
    //期望交货日期
    var taskEndTime = {
        elem: '#iptCreateTime',
        format: 'YYYY-MM-DD',
        min: minDate,
        max: '2099-06-16',
        istime: false,
        istoday: false
    };
    laydate(taskEndTime);
</script>